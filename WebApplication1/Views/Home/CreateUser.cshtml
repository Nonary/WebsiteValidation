@model WebApplication1.Models.User



        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="col-form-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="col-form-label"></label>
                <input asp-for="DateOfBirth" class="form-control"  value="null"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Country" class="col-form-label"></label>
                <select asp-for="Country" asp-items=@(new SelectList(Country.GetCountries)) class="form-control">
                   
                </select>
            </div>
            <div class="form-group">
                <label asp-for="State" class="col-form-label"></label>
                <select asp-for="State" asp-items="null" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" asp-action="SubmitUser" id="createButton"/>
                <input type="button" value="Validate Inputs" class="btn" id="validateButton"/>
            </div>
        </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript" language="javascript">
    function disableButton(button) {
        $(button).attr('disabled', 'true');
    }

    function enableButton(button) {
        $(button).removeAttr('disabled');
    }


    function notifyFieldInvalid(element) {
        $(element).addClass('bg-danger');
    }

    function notifyFieldValid(element) {
        $(element).removeClass('bg-danger');
        $(element).addClass('bg-success');
    }
</script>

<script type="text/javascript" language="javascript">

    $(document).ready(function () {
        disableButton($('#createButton'));

        $('#validateButton').on('click',
            function () {

                disableButton('#validateButton');
                console.log('Performing Asyncronous Call');
                     

                $.getJSON("Home/GetSampleJson").done(function(data) {
                    console.log(data);
                    if (data.successful === 'Nope') {
                        notifyFieldInvalid($('#LastName'));
                        disableButton('#createButton');
                    } else {
                        notifyFieldValid($('#LastName'));

                        enableButton('#createButton');
                    }

                    enableButton('#validateButton');
                });

               
            });


        document.select('#Country').addEventListener('onchange', function() {
            console.log()
        });

    });

</script>